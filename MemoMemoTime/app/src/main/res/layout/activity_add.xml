<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddActivity">

        <EditText
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/memoEdit" android:layout_marginTop="84dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="36dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/memoEdit" app:layout_constraintStart_toStartOf="@+id/memoEdit"
            android:text="@string/memo_text" android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <Button
            android:text="@string/save_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveBtn" app:layout_constraintStart_toStartOf="@+id/memoEdit"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/memoEdit"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <Button
            android:text="@string/cancel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancelBtn" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/memoEdit" app:layout_constraintEnd_toEndOf="@+id/memoEdit"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

</androidx.constraintlayout.widget.ConstraintLayout>